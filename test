local x = 0
local y = 0 
local z = 0
while wait(1) do
   z += 1
    if z == 60 then  
      z == 0 and y += 1
    end
    if z == 59 and y == 60 then 
      x += 1 and z == 0 and y == 0
    end
  local hour = tostring(x)
  local min = tostring(y)
  local sec = tostring(z)
end
print(hour..":"..min..":"..sec)
